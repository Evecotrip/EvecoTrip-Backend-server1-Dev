# ============================================
# AUTH SERVICE - ENVIRONMENT VARIABLES
# ============================================

# Node Environment
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/evecotrip?schema=public"

# Redis (Upstash)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"
REDIS_URL="redis://default:your-redis-password@your-redis.upstash.io:6379"

# Clerk Authentication
CLERK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxx"
CLERK_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxx"
CLERK_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxx"

# JWT Configuration
JWT_SECRET_KEY="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRY="7d"
JWT_REFRESH_EXPIRY="30d"

# AWS SNS (for SMS OTP)
AWS_REGION="ap-south-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_SNS_TOPIC_ARN="arn:aws:sns:ap-south-1:123456789:evecotrip-otp"

# Security
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://evecotrip.com"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Service URLs (for inter-service communication)
USER_SERVICE_URL="http://localhost:3002"
DRIVER_SERVICE_URL="http://localhost:3003"
RIDE_SERVICE_URL="http://localhost:3004"

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Session Configuration
SESSION_EXPIRY_DAYS=7
REFRESH_TOKEN_EXPIRY_DAYS=30

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# Cron Jobs
ENABLE_CRON_JOBS=true
SESSION_CLEANUP_CRON="0 2 * * *"
TOKEN_CLEANUP_CRON="0 3 * * *"